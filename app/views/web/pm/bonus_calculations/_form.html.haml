%h1= t('bonus_calculations')
%h3
  - if @total_result
    = "Сумма бонусов: #{@total_result} р."
= simple_form_for @form, url: pm_bonus_calculation_path, wrapper: :inline_form,
  html: { class: 'form-inline' } do |f|
  .nested
    = f.simple_fields_for :pm_bonuses do |bonus_fields|
      = render partial: 'pm_bonus_fields', locals: {f: bonus_fields}
  .active
    .btn-group
      = bonus_link_to_add_association 'Добавить новую строку', f, :pm_bonuses, class: 'btn btn-default'
      = f.button :submit, 'Подсчитать', class: 'btn btn-default'
